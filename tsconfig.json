{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDirs": ["src"],
    "target": "ES6",
    "module": "esnext",// 格式
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "declaration":true,
    "esModuleInterop": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "sourceMap": false,
    "baseUrl": "./",
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "lib": ["ES2016", "DOM"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
  },
  "allowArbitraryExtensions":true,

  "include": ["./src/**/*"],
  "exclude": ["node_modules", "lib", "es", "dist","./src/**/*.stories.tsx",],
  // "ts-node": {
  //   "compilerOptions": {
  //     "module": "CommonJS",
  //     "resolveJsonModule": true,
  //     "noImplicitAny": false
  //   }
  // }
}